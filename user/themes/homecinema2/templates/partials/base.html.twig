{% set aboutpage = pages.find('/about') %}

<!DOCTYPE html>
<html lang="{{ (grav.language.getActive ?: grav.config.site.default_lang)|e }}">
<head>
{% block head %}
    <meta charset="utf-8" />
    <title>{% if header.title %}{{ header.title|e }} üçø {% endif %}{{ site.title|e }}</title>

    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {% include 'partials/metadata.html.twig' %}

    <link rel="icon" type="image/png" href="{{ url('theme://images/logo.png')|e }}" />
    <link rel="canonical" href="{{ page.canonical(true)|e }}" />
{% endblock head %}

{% block stylesheets %}
    {% do assets.addCss('https://unpkg.com/purecss@1.0.0/build/pure-min.css', 100) %}
    {% do assets.addCss('https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css', 99) %}
    {% do assets.addCss('theme://css/custom.css', 98) %}
{% endblock %}

{% block javascripts %}
    {% do assets.addJs('jquery', 100) %}
    {% do assets.addJs('https://unpkg.com/feather-icons', 99) %}
    {% do assets.addJs('theme://js/index.js', {group:'bottom'}) %}
{% endblock %}

{% block assets deferred %}
    {{ assets.css()|raw }}
    {{ assets.js()|raw }}
{% endblock %}
</head>
<body id="top" class="{{ page.header.body_classes|e }} light">

{% block header %}
    <div class="header">
        <div class="wrapper padding">
            <a class="logo left" href="{{ home_url|e }}">
                {{ config.site.title|e }}
            </a>
            <span class="context">
              {{aboutpage.header.context}}
            </span>
            <div class="light-dark">
              {# https://www.w3schools.com/howto/howto_css_switch.asp #}
              <label class="switch">
                <span class="label light"><i data-feather="sunrise"></i></span>
                <input type="checkbox">
                <span class="slider round"></span>
                <span class="label dark"><i data-feather="sunset"></i></span>
              </label>
            </div>
            <button type="button" name="menu">Menu</button>
            {% block header_navigation %}
            <nav class="main-nav">
                {% include 'partials/navigation.html.twig' %}
            </nav>
            {% endblock %}
        </div>
    </div>
{% endblock %}

{% block body %}
    <section id="body">
        <div class="wrapper padding">
        {% block topsection %}
            <div class="top-section">
              <div class="now-playing">
                Now playing STILL NEEDS TO BE CODED
              </div>

              <hr>

              <div class="dashboard">
                <div class="intro">
                  {{ aboutpage.header.intro|markdown }}
                </div>
                <div class="navigation">
                  <ul class="location">
                    <li>{{page.title}}</li>
                    <li>(You're currently here)</li>
                  </ul>
                  <ul class="mode">
                    <li class="label light"><i data-feather="sunrise"></i></li>
                    <li class="label dark"><i data-feather="sunset"></i></li>
                    <li>(You're currently here)</li>
                  </ul>
                  <ul class="enter">
                    <li class="dark">
                      <button type="button" name="cinema">[Enter Cinema]</button>
                    </li>
                    <li>Please put your phone on silent</li>
                  </ul>
                </div>
              </div>

              <hr>

            </div>
        {% endblock %}
        {% block content %}{% endblock %}
        </div>
    </section>
{% endblock %}

{% block bottom %}
    {{ assets.js('bottom')|raw }}
{% endblock %}

</body>
</html>
